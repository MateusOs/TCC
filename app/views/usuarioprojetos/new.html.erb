
<h1>Adicionar usuários ao projeto</h1>

<%= form_for @usuarioprojeto, url: usuarioprojetos_new_path do |form| %>
<% if @usuarioprojeto.errors.any? %>
<div id="error_explanation">
	<div class="alert-error">
		O formulário contém <%= pluralize(@usuarioprojeto.errors.count, "erro") %>.
	</div>
	<ul>
		<% @usuarioprojeto.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="mb-3">
	<%= form.label "Usuário" %>
	<%= form.collection_select(:usuario_id, @usuarios, :id, :nome, {include_blank: true}, class: "form-select") %>
</div>
<div class="mb-3">
	<%= form.label "Tipo de usuário" %>
	<%= form.select :tipoUsuario, (["Coordenador", "Vice-coordenador", "Aluno", "Equipe executora"]), {include_blank: true}, class: "form-select" %>
</div>
<div class="mb-3">
	<%= form.label "Projeto" %>
	<%= form.collection_select(:projeto_id, @projetos, :id, :nome, {include_blank: true}, class: "form-select") %>
</div>
<div class="mb-3">
	<%= form.label "Carga horaria" %>
	<%= form.text_field :cargaHoraria, class: "form-control" , placeholder:"Digite a carga horária" %>
</div>
<div class="mb-3">
	<%= form.submit "Salvar", class:"btn btn-primary" %>
</div>
<% end %>
