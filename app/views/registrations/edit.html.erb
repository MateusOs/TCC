<h1>Editar usuário</h1>

<%= form_for @usuario, url: update_registration_path do |form| %>
<div class="mb-3">
	<%= form.label "Nome" %>
	<%= form.text_field :nome, :required => true, class: "form-control", placeholder:"Digite seu nome" %>
</div>
<div class="mb-3">
	<%= form.label "Login" %>
	<%= form.text_field :login, :required => true, class: "form-control", placeholder:"Digite seu login" %>
</div>
<div class="mb-3">
	<%= form.label "Senha" %>
	<%= form.password_field :password, :required => true, class: "form-control" , placeholder:"Digite sua senha", style: "display: block"%>
</div>	
<div class="mb-3">
	<%= form.label "Confirme a senha" %>
	<%= form.password_field :password_confirmation, :required => true, class: "form-control" , placeholder:"Confirme sua senha"%>
</div>
<div class="mb-3">
	<%= form.label "E-mail" %>
	<%= form.text_field :email, :required => true, class: "form-control" , placeholder:"Digite seu e-mail" %>
</div>
<div class="mb-3">
	<%= form.label "Tipo de usuário" %>
	<%= form.select :tipoUsuario, (["Administrador", "Aluno", "Professor"]), {include_blank: true}, class: "form-select" %>
</div>	
<div class="mb-3">
	<%= form.label "Telefone" %>
	<%= form.telephone_field :fone, class: "form-control" , placeholder:"Digite seu telefone" %>
</div>
<div class="mb-3">
	<%= form.label "Departamento" %>
	<%= form.telephone_field :departamento, class: "form-control" , placeholder:"Digite seu departamento" %>
</div>
<div class="mb-3">
	<%= form.label "Chefe departamento" %>
	<%= form.telephone_field :chefeDepartamento, class: "form-control" , placeholder:"Digite seu chefe de departamento" %>
</div>
<div class="mb-3">
	<%= form.submit "Salvar", class:"btn btn-primary" %>
</div>
<% end %>
