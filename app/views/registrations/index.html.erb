<div>
  <div class="row">
    <div class="col col-sm-2 p-2">
      <h1>Usuários</h1>
    </div>
    <div class="col col-sm-2 col p-2">
      <%= link_to image_tag("add.png", height: 25) + " Novo usuario", registrations_new_path, class: "nav-link" %>
    </div>
  </div>
</div>

<div>
  <div class="row">
    <div class="col col-sm-4 p-2 bg-light border">
      <strong>Nome</strong>
    </div>
    <div class="col col-sm-4 col p-2 bg-light border">
      <strong>Email</strong>
    </div>
    <div class="col col-sm-2 col p-2 bg-light border">
      <strong>Tipo de usuário</strong>
    </div>
    <div class="col col-sm-2">
    </div>
  </div>
</div>

<div>
  <div class="row">
  	<% @usuario.each do |usuario| %>
	    <div class="col col-sm-4 p-2 bg-light border">
	      <%= usuario.nome %>
	    </div>
	    <div class="col col-sm-4 col p-2 bg-light border">
	      <td><%= usuario.email %></td>
	    </div>
	    <div class="col col-sm-2 col p-2 bg-light border">
	      <td><%= usuario.tipoUsuario %></td>
	    </div>
	    <div class="col col-sm-2 col p-2 bg-light border">
        <div class="d-flex"> 
          <%= link_to image_tag("edit.png", height: 25), edit_registration_path(usuario), class: "nav-link" %>
  	      <%= link_to image_tag("delete1.png", height: 25), destroy_registration_path(usuario), :method => :delete, class: "nav-link" %>
	       	<%= link_to image_tag("view.png", height: 25), show_registration_path(usuario), class: "nav-link" %>
        </div>
	    </div>
    <% end %>
  </div>
</div>
