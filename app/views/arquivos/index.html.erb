
<div>
  <div class="row">
    <div class="col col-sm-2 p-2">
      <h1>Arquivos</h1>
    </div>
    <div class="col col-sm-2 col p-2">
      <%= link_to image_tag("add.png", height: 25) + " Novo arquivo", arquivos_new_path, class: "nav-link" %>
    </div>
  </div>
</div>

<div>
  <div class="row">
    <div class="col col-sm-3 p-2 bg-light border">
      <strong>Projeto</strong>
    </div>
    <div class="col col-sm-1 p-2 bg-light border">
      <strong>Data</strong>
    </div>
    <div class="col col-sm-2 col p-2 bg-light border">
      <strong>Link</strong>
    </div>
    <div class="col col-sm-4 col p-2 bg-light border">
      <strong>Documento</strong>
    </div>
    <div class="col col-sm-2">
      
    </div>
  </div>
</div>

<div>
  <div class="row">
  	<% @arquivo.each do |arquivo| %>
      <div class="col col-sm-3 p-2 bg-light border">
        <%= arquivo.projeto.nome %>
      </div>
	    <div class="col col-sm-1 p-2 bg-light border">
	      <%= arquivo.data.strftime("%d/%m/%Y") %>
	    </div>
      <div class="col col-sm-2 p-2 bg-light border">
        <%= link_to arquivo.link, "http://#{arquivo.link}" %>
      </div>
      <div class="col col-sm-4 p-2 bg-light border">
        <%= link_to arquivo.documento.filename, rails_blob_path(arquivo.documento, disposition: "attachment") %>
      </div>
	    <div class="col col-sm-2 col p-2 bg-light border">
        <div class="d-flex"> 
          <%= link_to image_tag("edit.png", height: 25), edit_arquivo_path(arquivo), class: "nav-link" %>
          <%= link_to image_tag("delete1.png", height: 25), destroy_arquivo_path(arquivo), :method => :delete, class: "nav-link" %>
  	    	<%= link_to image_tag("view.png", height: 25), show_arquivo_path(arquivo), class: "nav-link" %>
        </div>
	    </div>
    <% end %>
  </div>
</div>
